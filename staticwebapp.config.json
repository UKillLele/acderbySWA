{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/login",
      "rewrite": "/.auth/login/github"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/public/images/*.{png,jpg,jpeg,gif,bmp}", "/css/*"]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src *; object-src 'none';"
  },
  "mimeTypes": {
    ".tsx": "application/javascript",
    ".json": "text/json"
  }
}